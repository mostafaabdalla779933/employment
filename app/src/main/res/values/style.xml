<resources>


    <style name="Text.tabs" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="EditText.edit" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">#003233</item>
        <item name="android:textColorHint">#30003233</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
