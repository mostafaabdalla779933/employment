<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.companyDetails.CompanyDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="#1A2363F5"
            app:contentPadding="9dp"
            android:src="@drawable/back"
            app:shapeAppearance="@style/RoundedImageView.3dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_company"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:background="#DCE0E8"
            app:shapeAppearance="@style/circleImageView" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="Company name" />

        <TextView
            android:id="@+id/tv_company_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_item_company"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="5dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColor="#2363F5"
            android:textSize="12sp"
            tools:text="01264988467" />

        <TextView
            android:id="@+id/tv_about_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="About company About company About company" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Branch"
            android:textColor="#A5A5A5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_company_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="Company branch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="#A5A5A5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_company_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="company@gmail.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Website"
            android:textColor="#A5A5A5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_company_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="www.website.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textColor="#A5A5A5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="Egypt, Cairo, city, St, Block" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>