<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_tv_company_details"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_college_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bachelor's, college name"
        android:textColor="#2363F5"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_university_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Egypt, Cairo university"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_college_name"
        app:layout_constraintStart_toStartOf="@+id/tv_college_name"/>

    <TextView
        android:id="@+id/tv_graduation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graduation grade: "
        android:textColor="#375391"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_university_name"
        app:layout_constraintStart_toStartOf="@+id/tv_university_name"/>

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1450"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/tv_graduation"
        app:layout_constraintBottom_toBottomOf="@+id/tv_graduation"
        app:layout_constraintStart_toEndOf="@+id/tv_graduation"/>

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2020"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>