<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.resume.AddResumeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:contentPadding="9dp"
            android:background="#1A2363F5"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/RoundedImageView.3dp" />

        <TextView
            android:id="@+id/tv_screen_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            android:text="Add Resume" />

        <TextView
            android:id="@+id/tv_personal_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_tv_resume"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="Personal data"
            android:gravity="center"
            android:textColor="#D2D2D2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back" />

        <TextView
            android:id="@+id/tv_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:text="Profile picture"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_personal_data" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_employee"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="#1A2363F5"
            android:src="@drawable/ic_add"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="@+id/tv_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_image"
            app:shapeAppearance="@style/RoundedImageView.3dp" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:hint="First name"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            style="@style/EditText.edit"
            android:padding="14dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_employee"/>

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Last name"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_first_name"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/et_last_name"
            app:layout_constraintTop_toBottomOf="@+id/et_last_name"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="24dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/tv_date">

            <TextView
                android:id="@+id/tvDayPickerBirthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="day"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down" />

            <TextView
                android:id="@+id/tvMonthPickerBirthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Month"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down"/>

            <TextView
                android:id="@+id/tvYearPickerBirthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Year"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/et_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Mobile number"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/llBirthDate"/>

        <TextView
            android:id="@+id/tv_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Nationality"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_mobile_number" />

        <Spinner
            android:id="@+id/spinner_nationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_nationality"/>

        <TextView
            android:id="@+id/tv_residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Residence"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_nationality" />

        <Spinner
            android:id="@+id/spinner_residence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_residence"/>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Address"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_residence"/>

        <TextView
            android:id="@+id/tv_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="25dp"
            android:text="Do you have a driver's license?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_address" />

        <RadioGroup
            android:id="@+id/rg_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_license">

            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>

            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="No"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="25dp"
            android:text="Choose gender:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg_license" />

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Female"/>
        </RadioGroup>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="mohamed@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rg_gender"/>

        <TextView
            android:id="@+id/tv_education_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_tv_resume"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="Education data"
            android:gravity="center"
            android:textColor="#D2D2D2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_email" />

        <TextView
            android:id="@+id/tv_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Qualification"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_education_data" />

        <Spinner
            android:id="@+id/spinner_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_qualification"/>

        <TextView
            android:id="@+id/tv_graduation_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Graduation country"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_qualification" />

        <Spinner
            android:id="@+id/spinner_graduation_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_graduation_country"/>

        <TextView
            android:id="@+id/tv_graduation_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Graduation country"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_graduation_country" />

        <EditText
            android:id="@+id/et_graduation_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Cairo university"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_graduation_university"/>

        <EditText
            android:id="@+id/et_college_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="College name"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_graduation_university"/>

        <TextView
            android:id="@+id/tv_graduation_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Graduation year"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_college_name" />

        <Spinner
            android:id="@+id/spinner_graduation_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_graduation_year"/>

        <TextView
            android:id="@+id/tv_add_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Add another Qualification"
            android:textColor="#2363F5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_graduation_year" />

        <TextView
            android:id="@+id/tv_remove_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:text="Remove"
            android:textColor="#CF1515"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_graduation_year" />

        <TextView
            android:id="@+id/tv_experience_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_tv_resume"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="Experience data"
            android:gravity="center"
            android:textColor="#D2D2D2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_add_qualification" />

        <EditText
            android:id="@+id/et_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Job title"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_experience_data"/>

        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Company name"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_job_title"/>

        <EditText
            android:id="@+id/et_company_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Company website (Optional)"
            android:inputType="textWebEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_company_name"/>

        <EditText
            android:id="@+id/et_Company_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Company number (Optional)"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_company_website"/>

        <EditText
            android:id="@+id/et_about_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="About company"
            android:lines="4"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_Company_number"/>

        <EditText
            android:id="@+id/et_company_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_about_company"/>

        <TextView
            android:id="@+id/tv_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join date (From):"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/et_company_email"
            app:layout_constraintTop_toBottomOf="@+id/et_company_email"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="24dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/tv_from_date">

            <TextView
                android:id="@+id/tvDayPickerFromDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="day"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down" />

            <TextView
                android:id="@+id/tvMonthPickerFromDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Month"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down"/>

            <TextView
                android:id="@+id/tvYearPickerFromDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Year"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/tv_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join date (To):"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/llStartDate"
            app:layout_constraintTop_toBottomOf="@+id/llStartDate"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="24dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/tv_to_date">

            <TextView
                android:id="@+id/tvDayPickerToDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="day"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down" />

            <TextView
                android:id="@+id/tvMonthPickerToDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Month"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down"/>

            <TextView
                android:id="@+id/tvYearPickerToDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Year"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="17dp"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:textColor="#000000"
                style="@style/EditText.edit"
                app:drawableEndCompat="@drawable/ic_arrow_down"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <CheckBox
            android:id="@+id/cb_present_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present date"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/llEndDate"
            app:layout_constraintTop_toBottomOf="@+id/llEndDate"/>

        <EditText
            android:id="@+id/et_experience_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColorHint="#2363F5"
            android:textColor="#2363F5"
            android:padding="14dp"
            android:hint="Experience years"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cb_present_date"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.edit"
            android:textColor="@color/black"
            android:padding="14dp"
            android:hint="Mobile"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_experience_years"/>

        <TextView
            android:id="@+id/tv_add_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Add another Experience"
            android:textColor="#2363F5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_mobile" />

        <TextView
            android:id="@+id/tv_remove_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:text="Remove"
            android:textColor="#CF1515"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_mobile" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            style="@style/roundedButton"
            android:text="Confirm"
            android:textSize="18sp"
            app:cornerRadius="4dp"
            android:layout_marginHorizontal="24dp"
            android:paddingVertical="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_experience"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>