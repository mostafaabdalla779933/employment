<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.resume.MyResumeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="#1A2363F5"
            app:contentPadding="9dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/RoundedImageView.3dp" />

        <TextView
            android:id="@+id/tv_screen_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            tools:text="My Resume" />

        <TextView
            android:id="@+id/tv_personal_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_tv_resume"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="Personal data"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_employee"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="#1A2363F5"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_personal_data"
            app:shapeAppearance="@style/RoundedImageView.3dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:text="Date of birth"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_employee" />

        <TextView
            android:id="@+id/tv_date_of_birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_date"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".4"
            tools:text="14 Nov 1994" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Mobile number"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/tv_date_of_birth"
            app:layout_constraintTop_toBottomOf="@id/iv_employee" />

        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_date_of_birth"
            app:layout_constraintTop_toBottomOf="@id/tv_mobile"
            tools:text="010×××××××××" />

        <TextView
            android:id="@+id/tv_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nationality"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_date_of_birth"
            app:layout_constraintTop_toBottomOf="@id/tv_date_of_birth" />

        <TextView
            android:id="@+id/tv_employee_nationality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_nationality"
            app:layout_constraintTop_toBottomOf="@id/tv_nationality"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".4"
            tools:text="Egypt" />

        <TextView
            android:id="@+id/tv_residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Residence"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/tv_employee_nationality"
            app:layout_constraintTop_toBottomOf="@id/tv_mobile_number" />

        <TextView
            android:id="@+id/tv_employee_residence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_employee_nationality"
            app:layout_constraintTop_toBottomOf="@id/tv_residence"
            tools:text="Tourist Visa" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Address"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_employee_nationality"
            app:layout_constraintTop_toBottomOf="@id/tv_employee_nationality" />

        <TextView
            android:id="@+id/tv_employee_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_address"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            tools:text="Egypt, Cairo, city, St, Block" />

        <RadioButton
            android:id="@+id/rb_license"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:layoutDirection="rtl"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="Have a driver's license"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_address"
            app:layout_constraintTop_toBottomOf="@id/tv_employee_address" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Nationality"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_employee_address"
            app:layout_constraintTop_toBottomOf="@id/rb_license" />

        <TextView
            android:id="@+id/tv_employee_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_gender"
            app:layout_constraintTop_toBottomOf="@id/tv_gender"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".4"
            tools:text="Male" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Email"
            android:textColor="#A5A5A5"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_employee_gender"
            app:layout_constraintTop_toBottomOf="@id/tv_employee_gender" />

        <TextView
            android:id="@+id/tv_employee_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_tv_company_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_email"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            tools:text="mohamed@gmail.com" />

        <TextView
            android:id="@+id/tv_educational_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_tv_resume"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="Education data"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_employee_email" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_educational_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_educational_data"
            tools:listitem="@layout/item_education_data" />

        <TextView
            android:id="@+id/tv_experience_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_tv_resume"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:text="Experience data"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_educational_data" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_experience_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_experience_data"
            tools:listitem="@layout/item_experience_data" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_interview"
            style="@style/roundedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="56dp"
            android:drawableEnd="@drawable/ic_interview"
            android:paddingVertical="14dp"
            android:text="Interview"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_experience_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit"
        style="@style/roundedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="56dp"
        android:paddingVertical="14dp"
        android:text="Edit data"
        android:visibility="gone"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_experience_data" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>