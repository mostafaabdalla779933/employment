<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#142363F5"
    android:padding="9dp">
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Branch name"
        android:textSize="17sp"
        android:id="@+id/tvBranchName"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/ivDelete"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ivDelete"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="01264988467"
        android:id="@+id/tvMobile"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvBranchName"
        android:maxLines="1"
        android:drawablePadding="5dp"
        app:layout_constraintEnd_toStartOf="@id/ivDelete"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#2363F5"
        app:drawableStartCompat="@drawable/ic_call" />

</androidx.constraintlayout.widget.ConstraintLayout>