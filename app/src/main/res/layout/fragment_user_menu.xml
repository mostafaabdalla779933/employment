<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".feature.userDashboard.UserMenuFragment">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_notification" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#F8F8F8"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Employment"
            android:textColor="#2363F5"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="invisible"
            android:src="@drawable/ic_message" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:textColor="#C5C5C5"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textSize="12sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_rounded_border"
        android:drawablePadding="14dp"
        android:padding="15dp"
        tools:text="Mohamed Abuallah"
        android:id="@+id/tvFullName"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#C5C5C5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bg_rounded_border"
        android:drawablePadding="14dp"
        android:padding="15dp"
        android:layout_marginTop="7dp"
        android:id="@+id/tvEmail"
        tools:text="mohamed@gmail.com"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_email" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/roundedButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="15dp"
        android:text="Logout"
        android:textSize="18sp"
        app:cornerRadius="4dp"
        app:icon="@drawable/ic_logout"
        app:iconPadding="5dp" />

</androidx.appcompat.widget.LinearLayoutCompat>