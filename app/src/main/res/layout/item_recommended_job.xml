<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="5dp"
    android:elevation="8dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_company_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="#DCE0E8"
            app:shapeAppearance="@style/circleImageView"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Company name"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginVertical="9dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_company_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/iv_job"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_job"
            android:layout_marginTop="9dp"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Job name"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv_job"
            app:layout_constraintTop_toTopOf="@+id/iv_job"
            app:layout_constraintBottom_toBottomOf="@+id/iv_job" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Full time"
            android:textColor="#2363F5"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_job"
            app:layout_constraintStart_toStartOf="@+id/iv_job"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>