<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".feature.userDashboard.UserResumeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_notification" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#F8F8F8"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Employment"
            android:textColor="#2363F5"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/ic_message" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_resume"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Resume"
        android:gravity="center"
        android:background="@drawable/bg_rounded_blue"
        android:textColor="@color/white"
        android:paddingVertical="18dp"
        android:layout_marginHorizontal="40dp"
        android:paddingHorizontal="35dp"
        android:textSize="21sp"
        android:id="@+id/tvAddResume"
        app:drawableEndCompat="@drawable/ic_add_third"
        android:drawablePadding="10dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Resume"
        android:gravity="center"
        android:id="@+id/tvMyResume"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rounded_black"
        android:textColor="@color/white"
        android:paddingVertical="18dp"
        android:layout_marginHorizontal="40dp"
        android:paddingHorizontal="35dp"
        android:textSize="21sp"
        android:drawablePadding="10dp"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</androidx.appcompat.widget.LinearLayoutCompat>