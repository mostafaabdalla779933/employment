<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="10dp"
    android:padding="12dp"
    android:background="@drawable/bg_tv_company_details"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvQualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2363F5"
        android:textSize="16sp"
        tools:text="Bachelor's" />

    <TextView
        android:id="@+id/tv_college_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2363F5"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        tools:text="college name" />

    <TextView
        android:id="@+id/tvUniversityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Egypt, Cairo university"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/tvGraduationCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Egypt"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/tv_graduation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Graduation grade: "
        android:textColor="#375391"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="1450"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2020"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="6dp" />

</androidx.appcompat.widget.LinearLayoutCompat>