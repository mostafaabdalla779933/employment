<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_rounded_border"
    android:elevation="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_employee"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginVertical="9dp"
        android:layout_marginStart="9dp"
        android:src="@drawable/ic_employee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circleImageView" />

    <TextView
        android:id="@+id/tv_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_employee"
        app:layout_constraintTop_toTopOf="@+id/iv_employee"
        tools:text="Mohmed ahmed wael" />

    <TextView
        android:id="@+id/tv_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Job title: "
        android:textColor="#8F8F8F"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/tv_employee_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_employee_name" />

    <TextView
        android:id="@+id/tv_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_job"
        app:layout_constraintStart_toEndOf="@id/tv_job"
        app:layout_constraintTop_toTopOf="@+id/tv_job"
        tools:text="HR" />

    <TextView
        android:id="@+id/tv_employee_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="7dp"
        android:drawableStart="@drawable/ic_call"
        android:drawablePadding="5dp"
        android:textColor="#2363F5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_job"
        app:layout_constraintTop_toBottomOf="@+id/tv_job_title"
        tools:text="01264988467" />

</androidx.constraintlayout.widget.ConstraintLayout>
